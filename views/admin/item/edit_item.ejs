<div
  class="tab-pane fade show active"
  id="edit-item"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form
        action="/admin/item/<%= item.id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="name">Title</label>
          <input
            type="text"
            class="form-control"
            name="title"
            value="<%= item.title %>"
            placeholder="Enter title"
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Thumbnail Url</label>
          <input
            type="text"
            class="form-control"
            name="thumbnail"
            value="<%= item.thumbnail %>"
            placeholder="Enter Thumbnail Url"
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Penulis</label>
          <input
            type="text"
            class="form-control"
            name="penulis"
            value="<%= item.penulis %>"
            placeholder="Enter Nama Penulis"
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Url Penulis</label>
          <input
            type="text"
            class="form-control"
            name="urlPenulis"
            value="<%= item.urlPenulis %>"
            placeholder="Enter Url Penulis"
            required
          />
        </div>
        <div class="form-group">
          <label for="name">Category</label>
          <select class="form-control" name="categoryId">
            <option value="<%= item.categoryId._id %>">
              --- <%= item.categoryId.name %> ---
            </option>
            <% for(let i = 0; i< category.length; i++){ %>
            <option value="<%= category[i].id %>">
              <%= category[i].name %>
            </option>
            <%}%>
          </select>
        </div>
        <div class="form-group">
          <label for="name">Image</label>
          <input type="file" class="form-control" name="image" multiple />
        </div>
        <div class="form-group">
          <label for="name">Description</label>
          <textarea name="about" class="form-control">
<%= item.description %></textarea
          >
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>
